{
  "name": "centurion-framework",
  "projectName": "Centurion Framework",
  "version": "3.6.3",
  "simpleDescription": "A Web Framework",
  "description": "Centurion is a web-based framework for rapid prototyping and provides a core for building larger web projects",
  "homepage": "http://www.centurionframework.com",
  "author": {
    "name": "Justin Hough",
    "email": "<justin@justinhough.com>",
    "url": "http://www.justinhough.com/"
  },
  "main": "Gruntfile.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "html": "acetate build -i docs -o release -c docs/data/conf.js",
    "server": "live-server release/ --port=4000 --no-browser",
    "stats": "cssstats release/css/grid.css release/css/stats.json",
    "prejs": "mkdir -p release/js",
    "js": "browserify lib/js/*.js | uglifyjs -b > release/js/centurion.min.js",
    "css": "node-sass lib/sass -o release/css",
    "postcss": "postcss --use autoprefixer -d release/css release/css/*.css",
    "prestart": "npm-run-series js css html server",
    "start": "parallelshell 'rerun-script'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/justinhough/centurion.git"
  },
  "bugs": {
    "url": "https://github.com/justinhough/centurion/issues"
  },
  "keywords": [
    "centurion",
    "framework",
    "web",
    "responsive"
  ],
  "license": "GPL",
  "devDependencies": {
    "acetate": "^0.2.2",
    "acetate-cli": "0.0.3",
    "autoprefixer": "^6.3.6",
    "autoprefixer-core": "^5.2.0",
    "browserify": "^13.0.1",
    "cssstats-cli": "^1.0.0-beta.2",
    "live-server": "^1.0.0",
    "ncp": "^2.0.0",
    "node-sass": "^3.7.0",
    "npm-run-series": "^1.0.0",
    "parallelshell": "^2.0.0",
    "postcss": "^5.0.21",
    "postcss-cli": "^2.5.2",
    "rerun-script": "^0.6.0",
    "uglify-js": "^2.6.2"
  }
}
